{
  "description": "Implements the API behind the abc project",
  "domain": "mydomain",
  "tld": "ca",
  "contextName": "abcProject",
  "slackHook": "Slack webhook to deliver devops notifications",

  "containers": {
    "www": {
      "type": "s3",
      "description": "A staticly served PWA",
      "port": 45123,
      "git": "repo"
    },
    "api": {
      "type": "lambda",
      "description": "Implements an API using the serverless framework",
      "env": [{ "env": "vars" }, { "go": "here" }],
      "git": "url-to-git-repo",
      "volumes": [{ "volumeName": "relative path" }]
    },
    "db": {
      "type": "docker",
      "description": "MongoDb instance to drive api",
      "port": 44568,
      "env": [{ "env": "vars" }, { "go": "here" }],
      "git": "url-to-git-repo",
      "volumes": [{ "volumeName": "relative path" }]
    }
  }
}
